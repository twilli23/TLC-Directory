<!DOCTYPE html>
<html>
  <head>
    <title><%= page_title('Directory | Scholarship of Teaching & Learning') %></title>
    <%= stylesheet_link_tag 'application', :media => 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <%= render(:partial => 'shared/header') %>
    <%= render(:partial => 'shared/navigation') %>
    <%= render(:partial => 'shared/public_banner') %>

    <!-- Main -->
    <div id="main-container" class="home-container container">
        
        <!-- Flash -->
        <%= render "utilities/alerts" %>

        <!-- Yield -->
        <%= yield %>
    </div>

    <%= render(:partial => 'shared/footer') %>

  </body>
</html>
