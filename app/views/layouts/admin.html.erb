<!DOCTYPE html>
<html>
  <head>
    <title> TLC Directory :: WVU Libraries <%= " | #{@page_title}" if @page_title %></title>
    <%= stylesheet_link_tag('application', :media => 'all') %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>
  <body>

    <div>
      <%= render(:partial => 'shared/wvu_admin_header') %>
    </div>

    <main>

      <div>
        <%= render(:partial => 'shared/admin_navigation') %>
      </div>

      <div>
        <%= render(:partial => 'shared/admin_banner') %>
      </div>

      <div>
        <%= yield %>
      </div>
      <div class="clear"></div>

    </main>

    <div>
      <%= render(:partial => 'shared/admin_footer') %>
    </div>

  </body>
</html>
