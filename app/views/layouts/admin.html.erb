<!DOCTYPE html>
<html>

<head>
  <title> <%= yield :title %> :: Library TLC Directory :: Admin Panel :: WVU </title>
  <%= csrf_meta_tags %>
  <%= csp_meta_tag %>
  <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  <%= yield :head %>
</head>

<body>
  <!-- Header -->
  <%= render(:partial => 'shared/header') %>

  <!-- Navigation -->
  <%= render(:partial => 'shared/navigation') %>

  <!-- Main Banner -->
  <%= render(:partial => 'shared/admin_banner') %>
  
  <!-- Main -->
  <div id="main-container" class="home-container container">
      
      <!-- Flash -->
      <%= render "utilities/alerts" %>
      
      <div class="col-container">
        <div class="col-side">
          <!-- Admin Menu -->
          <%= render(:partial => 'shared/admin_navigation') %>
        </div>
        <div class="col-main">
          <!-- Yield -->
          <%= yield %>
        </div>
      </div>

  </div>

  <!-- Footers -->
  <%= render(:partial => 'shared/builtby_footer') %>

  <!-- JavaScripts -->
  <%= yield :js %>
</body>
</html>
