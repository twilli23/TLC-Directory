<h2> Showing <%= @user.display_name %> </h2>

<div class="show-action">
    
    <div class="text-attributes">
      <ul>

        <li>
          <strong> First Name: </strong>
          <%= @user.first_name %>
        </li>

        <li>
          <strong> Middle Name: </strong>
          <%= @user.middle_name %>
        </li>

        <li>
          <strong> Last Name: </strong>
          <%= @user.last_name %>
        </li>

        <li>
          <strong> WVU Username: </strong>
          <%= @user.wvu_username %>
        </li>

        <li>
          <strong> Role: </strong>
          <%= @user.role.capitalize %>
        </li>

        <li>
          <strong> Status: </strong>
          <%= @user.status.capitalize %>
        </li>

        <li>
          <strong> Address(es): </strong>
          <ul>
          <% @user.addresses.each do |address| %>
            <li> <%= address.human_readable %> </li>
          <% end %>
          </ul>
        </li>

        <li>
          <strong> Award(s): </strong>
          <ul>
          <% @user.awards.each do |award| %>
            <li> <%= award.description %> </li>
          <% end %>
          </ul>
        </li>

        <li>
          <strong> Email Address(es): </strong>
          <ul>
          <% @user.email_addresses.each do |email| %>
            <li>
              <a href="mailto:<%= email.email_address %>">
                <%= email.email_address %>
              </a>
            </li>
          <% end %>
          </ul>
        </li>

        <li>
          <strong> Phone(s): </strong>
          <ul>
          <% @user.phones.each do |phone| %>
            <li>
              <a href="tel:<%= phone.number %>">
                <%= phone.number %>
              </a>
            </li>
          <% end %>
          </ul>
        </li>

        <li>
          <strong> Website(s): </strong>
          <ul>
          <% @user.websites.each do |website| %>
            <li>
              <a href="<%= website.url %>">
                <%= website.url %>
              </a>
            </li>
          <% end %>
          </ul>
        </li>

      </ul>
      
      <div class="micro-text">
        Created at <%= @user.created_at.strftime("%B %d, %Y at %I:%M%p") %> <br/> Updated at <%= @user.updated_at.strftime("%B %d, %Y at %I:%M%p")%>
      </div>
    </div>

    <div class="actions">
      <%= link_to '<span class="fas fa-user"></span> Users'.html_safe, '/admin/users', { class: 'new-button' } %>
      <%= link_to '<span class="fas fa-edit"></span> Edit'.html_safe, edit_admin_user_path(@user), { class: 'edit-button' } %>
      <%= link_to '<span class="fas fa-trash"></span> Destroy'.html_safe, admin_user_path(@user), method: :delete, class: 'delete-button', data: { confirm: 'Are you sure?' }, title:'delete' %>
    </div>
</div>
