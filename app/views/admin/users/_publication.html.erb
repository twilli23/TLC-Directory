<fieldset class="publication">
  <legend> Publication </legend>

  <div class="field full">
    <%= form.label :description, "Description", class: 'required' %>
    <%= form.text_field :description, placeholder:'1st Place in underwater basket weaving' %>
  </div>

  <div class="action">
    <%= form.hidden_field :_destroy %>
    <%# form.label :_destroy, "Delete Address" %>
    <%= link_to '<span class="fas fa-trash-alt"></span>'.html_safe , '#', class: "remove-fields delete-award", title: "Delete Award" %>
  </div>
</fieldset>
