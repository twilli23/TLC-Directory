<div class="wvu-main-content">

  <div class="wrap content-wrapper">

    <div id="sidecontent" class="col-4 col-s-12 side-content-left">
         <h3>Admin Navigation</h3>
    </div>

    <div class="col-8 sol-s-12 wvu-main-content-right">
      <tbody>
        <h1>Universities</h1>
        <table>
          <thead>
            <tr>
              <th>ID</th>
              <th>Name</th>
              <th colspan="3"></th>
            </tr>
          </thead>

          <tbody>
            <% @universities.each do |university| %>
              <tr>
                <td><%= university.id %></td>
                <td><%= university.name %></td>
                <td><%= link_to 'Show', university %></td>
                <td><%= link_to 'Edit', edit_university_path(university) %></td>
                <td><%= link_to 'Destroy', university,
                              method: :delete,
                              data: { confirm: 'Are you sure?' } %></td>
              </tr>
            <% end %>
          </tbody>
        </table>
        <br>
        <%= link_to 'New University', new_university_path %>
      </tbody>
    </div>
  </div>
</div>
