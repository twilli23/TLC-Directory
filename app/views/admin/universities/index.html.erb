<h2>Universities</h2>

<tbody>

  <table>
    <thead>
      <tr>
        <th>ID</th>
        <th>Name</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @universities.each do |university| %>
        <tr>
          <td><%= university.id %></td>
          <td><%= university.name %></td>
          <td><%= link_to 'Show', university %></td>
          <td><%= link_to 'Edit', edit_university_path(university) %></td>
          <td><%= link_to 'Destroy', university,
                        method: :delete,
                        data: { confirm: 'Are you sure?' } %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</tbody>
