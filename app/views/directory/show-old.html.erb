<div class="col-side">
  <!-- Show Profile picture -->
  <div class="profile-image">

  </div>  
</div>

<div class="col-main">
    <h2><%= @faculty_profile.display_name %></h2>

   <div>
     <h4>Title:</h4>
     <%= @faculty_profile.title %>
   </div>

   <div>
     <h4>Department:</h4>
     <%= @faculty_profile.department %>
   </div>

   <div>
     <h4>Biography:</h4>
     <%= @faculty_profile.biography %>
   </div>

   <div>
     <h4>Research Interests:</h4>
     <%= @faculty_profile.research_interests %>
   </div>

   <% if hasawards?(@faculty_profile) %>
     <div name='awards'>
       <h4>Award(s):</h4>
       <% @faculty_profile.awards.each do |award| %>
           <%= award.description %>
       <% end %>
     </div>
   <% end %>

   <% if hasaddresses?(@faculty_profile) %>
     <div name='addresses'>
       <h4>Address(es):</h4>
       <% @faculty_profile.addresses.each do |address| %>
         <ul>
            <li><strong>Street Address 1: </strong><%= address.street_address_1 %></li>
            <li><strong>Street Address 2: </strong><%= address.street_address_2 %></li>
            <li><strong>City: </strong><%= address.city %></li>
            <li><strong>State: </strong><%= address.state %></li>
            <li><strong>Zip Code: </strong><%= address.zip_code %></li>
         </ul>
       <% end %>
     </div>
   <% end %>

   <% if hasphones?(@faculty_profile) %>
     <div name='phones'>
       <h4>Phone(s):</h4>
       <% @faculty_profile.phones.each do |phone| %>
           <a href="tel:<%= phone.number %>">
             <%= phone.number %>
           </a>
           <%= phone.number_types %>
       <% end %>
     </div>
   <% end %>

   <% if haspublications?(@faculty_profile) %>
     <div name='publications'>
       <h4>Publications(s):</h4>
       <% @faculty_profile.publications.each do |publication| %>
           <%= publication.description %>
       <% end %>
     </div>
   <% end %>

   <% if haswebsites?(@faculty_profile) %>
     <div name='websites'>
       <h4>website(s):</h4>
       <% @faculty_profile.websites.each do |website| %>
           <a href="<%= website.url %>">
             <%= website.url %>
           </a>
       <% end %>
     </div>
   <% end %>
   
</div>
