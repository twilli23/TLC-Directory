<div class="col-side">
  
  <div class="refine-side-search">
    <!-- Directory Search -->
    <%= form_tag(directory_path, :method => "get", id: "search-form") do %>
        <%= select_tag(:categories, options_for_select([['All Categories', 1], ['Name', 2], ['Department', 3]]))%>
        <%= text_field_tag :search, params[:search], placeholder: "Search the Directory ..." %>
        <button type="submit"><span class="fa fa-search"></span></button>
    <% end %>      
  </div>
  
  <h2>Refine Your Search:</h2>
</div>

<div class="col-main">
  <% @faculty_profiles.each do |faculty_profile| %>
    <div class="profile-box">
         <!-- Show Profile picture with caption-->     
         <div class="col-container">         
            <div class="col-side">
                <div class="profile-picture">
                   <%= image_tag(faculty_profile.image.url, alt: "Faculty Profile Picture", title: "Faculty Profile Picture") %>
                </div>
                
                <div class="photo-caption">
                  <%= faculty_profile.first_name %>'s Profile
                </div> 
            </div>
           
            <div class="col-main">
               <h2><%= link_to faculty_profile.display_name, directory_show_path(faculty_profile.id) %></h2>
               <% unless faculty_profile.title.nil? || faculty_profile.title.empty? %>
                <div class="micro"> <%= faculty_profile.title %> </div>
               <% end %>
               <% unless faculty_profile.college.nil? || faculty_profile.college.empty? %>
                <div class="micro"> <%= faculty_profile.college %> </div>
               <% end %>                     
               <% unless faculty_profile.department.nil? || faculty_profile.department.empty? %>
                <div class="micro"> <%= faculty_profile.department %> </div>
               <% end %>        
               <% unless faculty_profile.research_interests.nil? || faculty_profile.research_interests.empty? %>
                <br>
                <div class="micro"> 
                  Research Interests:
                </div>
                <div class="micro2"> 
                  <%= faculty_profile.research_interests %> 
                </div>                    
               <% end %>                                     
            </div>
            
         </div>
    </div>        
  <% end %>
</div>    




